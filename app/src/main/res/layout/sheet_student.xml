<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/myframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:clipToPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Name"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/nametxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Not given"
                    android:hint="Not given"

                    android:padding="5dp"


                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_below="@id/layout8"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/email"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Email:"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Not given"
                    android:hint="Not given"
                    android:padding="5dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout99"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_below="@id/layout9"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/rollno"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Roll No:"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/rollnotxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Not given"
                    android:hint="Not given"
                    android:padding="5dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout99"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/phoneno"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Phoneno:"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/phonenotxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"

                    android:text="Not given"
                    android:hint="Not given"

                    />
            </LinearLayout>

         <!--   <LinearLayout
                android:id="@+id/layout11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout10"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/branch"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Branch:"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/branchtxt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Your Branch"

                    android:textStyle="bold"


                    />
            </LinearLayout> -->

            <LinearLayout
                android:id="@+id/layout12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout10"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/address"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Address:"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/addresstxt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Not given"
                    android:hint="Not given"

                    android:textStyle="bold"


                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout12"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/gphoneno"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Guardian No:"
                    android:textColor="#e91193"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/gphonenotxt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Not given"
                    android:hint="Not given"

                    android:textStyle="bold"


                    />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--<LinearLayout
        android:id="@+id/layout13"
        android:layout_width="match_parent"
